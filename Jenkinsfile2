pipeline {
    agent any

    stages {
        stage("Build docker image"){
            steps{
                sh "docker build -t spring-petclinic -f DockerfileBuild . > logs.log"
                recordIssues tool: consoleLog(), healthy: '', unHealthy: ''
            }
            post {
                always {
                    archiveArtifacts artifacts: 'test.log', fingerprint: true
                }
            }
        }
    }
}