pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[url: 'https://github.com/patry77/spring-petclinic.git']]])
                recordIssues tool: consoleLog(), healthy: '', unHealthy: ''
            }
            post {
                always {
                    archiveArtifacts artifacts: 'logs/*.log', fingerprint: true
                }
            }
        }
        stage("Build docker image"){
            steps{
                sh "docker build -t spring-petclinic -f DockerfileBuild . > logs.log"
                recordIssues tool: consoleLog(), healthy: '', unHealthy: ''
            }
            post {
                always {
                    archiveArtifacts artifacts: 'test.log', fingerprint: true
                }
            }
        }
    }
}